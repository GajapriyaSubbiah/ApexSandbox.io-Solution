public String nameFromEmail(String email) {
    String substr = email.substringBefore('@');
    system.debug(substr);
    String substr1 = substr.substringBefore('.');
    String substr2 = substr.substringAfter('.');
    String firstname = substr1(0,1)).toUppercase();
    String lastname = substr2(1).toLowerCase();
    
    return firstname + ' ' + lastname;
}