public Id insertCourse(String name, String details, Integer credits) {
    // code here
     String creditsStr = String.valueOf(credits);
        
        // Check if the credits value is valid
        if (creditsStr != '1' && creditsStr != '2' && creditsStr != '3' && creditsStr != '4') {
            return null;
        }

        // Create a new course record
        apxio__Course__c newCourse = new apxio__Course__c();
        newCourse.Name = name;
        newCourse.apxio__Course_Details__c = details;
        newCourse.apxio__Credits__c = creditsStr;

        // Insert the record
        insert newCourse;

        // Return the Id of the inserted record
        return newCourse.Id;
}