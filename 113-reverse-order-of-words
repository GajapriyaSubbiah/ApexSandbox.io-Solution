public String reverseWordsInASentence(String sentence){
    if (String.isBlank(sentence)) {
        return '';
    }

    // Step 1: Trim extra spaces at start/end
    sentence = sentence.trim();

    // Step 2: Reverse the whole sentence
    String reversedSentence = String.reverse(sentence);

    // Step 3: Split reversed sentence into words (reversed characters)
    List<String> reversedWords = reversedSentence.split('\\s+');

    // Step 4: Reverse each word individually
    for (Integer i = 0; i < reversedWords.size(); i++) {
        reversedWords[i] = String.reverse(reversedWords[i]);
    }

    // Step 5: Join words with single space
    return String.join(reversedWords, ' ');
}