public String aOrAn(String word) {
    if (String.isBlank(word)) {
        return word;
    }

    word = word.trim();
    String lower = word.toLowerCase();

    if (lower.startsWith('a') || lower.startsWith('e') || 
        lower.startsWith('i') || lower.startsWith('o') || 
        lower.startsWith('u')) {
        return 'an ' + word;
    } else {
        return 'a ' + word;
    }
}